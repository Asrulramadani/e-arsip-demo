<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= title %></h1>
      </div>
      <!-- /.col-lg-12 -->
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4>Edit Arsip</h4>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-8">
                  <form
                    action="/archives/edit/<%= result.id %>?_method=PUT"
                    method="post"
                    enctype="multipart/form-data"
                  >
                    <div class="form-group">
                      <label>No. Arsip</label>
                      <input
                        type="text"
                        class="form-control"
                        value="<%= result.number %> "
                        disabled
                      />
                    </div>
                    <div class="form-group">
                      <label>Nama Arsip</label>
                      <input
                        type="text"
                        class="form-control"
                        value="<%= result.name %>"
                        name="name"
                        required
                      />
                    </div>
                    <div class="form-group">
                      <label>Kategori</label>
                      <select class="form-control" name="categoryId" required>
                        <% if (categories) { %>
                        <option selected disabled>-- Pilih Kategori --</option>
                        <% categories.forEach(category => { %> <% if
                        (result.categoryId == category.id) { %>
                        <option value="<%= category.id %>" selected>
                          <%= category.name%>
                        </option>
                        <% } else { %>
                        <option value="<%= category.id %>">
                          <%= category.name%>
                        </option>
                        <% } %> <% }) %> <% } %>
                      </select>
                    </div>
                    <div class="form-group">
                      <label>Departemen</label>
                      <select
                        class="form-control"
                        name="departementId"
                        required
                      >
                        <% if (departements) { %>
                        <option selected disabled>
                          -- Pilih departemen --
                        </option>
                        <% departements.forEach(departement => { %> <% if
                        (result.departementId) { %> <% if (result.departementId
                        == departement.id) { %>
                        <option value="<%= departement.id %>" selected>
                          <%= departement.name%>
                        </option>
                        <% } %> <% } else { %>
                        <option value="<%= departement.id %>">
                          <%= departement.name%>
                        </option>
                        <% } %> <% }) %> <% } %>
                      </select>
                    </div>
                    <div class="form-group">
                      <label>Deskripsi</label>
                      <textarea
                        class="form-control"
                        rows="3"
                        name="desc"
                        required
                      >
<%= result.desc %></textarea
                      >
                    </div>
                    <div class="form-group">
                      <input
                        type="hidden"
                        class="form-control"
                        value="<%= result.file_name %>"
                        name="oldFileName"
                      />
                      <label>File Arsip Baru</label>
                      <input type="file" name="archiveFile" />
                      <p style="color: red">
                        *Silahkan di isi jika ingin mengubah file arsip
                      </p>
                    </div>

                    <br />
                    <br />
                    <a href="/archives" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-primary">
                      Simpan
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.col-lg-12 -->
      </div>
    </div>
    <!-- #page-wrapper -->
  </div>
</div>
