
    <% if (level === "admin") { %>
         <!-- Page Content -->
         <div id="page-wrapper">
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-12">
                <h1 class="page-header"><%= title %> </h1>
              </div>
              <!-- /.col-lg-12 -->
            </div>
    
            <% if (success.length !== 0) { %>
                <div class="row">
                <div class="col-md-8">
                  <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <%= success %> 
                  </div>
                </div>
                </div>
    
              <% } %>
    
            <% if (failed.length !== 0) { %>
                <div class="row">
                <div class="col-md-8">
                  <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <%= failed %> 
                  </div>
                </div>
                </div>
              <% } %>
            <div class="row">
              <div class="col-lg-12">
                <div class="panel panel-default">
                  <div class="panel-heading" 
                    style="
                      display: flex;
                      justify-content: space-between;
                      align-items: center;
                    "
                  >            
                     <h4>Data Departemen</h4>
                      <button class="btn btn-success" data-toggle="modal" data-target="#addModal"><i class="fa fa-plus"></i> Tambah</button>
    
    
                      <!-- modal -->
                      <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none; ">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" id="myModalLabel">Tambah Departemen</h4>
                                </div>
                                <div class="modal-body">
                                  <form action="/departements/add" method="post" role="form">
                                    <div class="form-group">
                                      <label>Nama kategori</label>
                                      <input type="text" class="form-control" name="departement" required autofocus>
                                  </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Tutup</button>
                                    <button type="submit" class="btn btn-primary">Simpan</button>
                                </div>
                                  </form>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                      <!-- /modal -->
                  </div>
                  <!-- /.panel-heading -->
                  <div class="panel-body">
                    <div class="table-responsive">
                      <table class="table table-striped table-bordered table-hover" id="dataTables">
                        <thead>
                          <tr>
                            <th class="text-center">Nomor</th>
                            <th class="text-center">Departemen</th>
                            <th class="text-center">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% if (results) { %>
                             <% results.forEach((data, i) => { %>
                                <tr class="<% (i % 2 != 0) ? "even" : "odd"%>">
                                    <td class="text-center"><%= i + 1 %> </td>
                                    <td class="text-center"><%= data.name %> </td>
                                    <td class="text-center">
                                        <a href="/departements/edit/<%= data.id %>" class="btn btn-success">Edit</a>
                                        <button onclick="confirmDelete('/departements/del/<%= data.id %>')" class="btn btn-danger">Hapus</button>
                                    </td>
                                </tr>
                             <% }) %>
                            <% } %>
                        </tbody>
                      </table>
                    </div>
                    <!-- /.table-responsive -->
                  </div>
                  <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
              </div>
              <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
    
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    <% } else { %>
      <% if (isLogin) { %>
        <br>
        <br>
          <div class="container-fluid">
              <div class="row">
                  <div class="col-md-8">
                      <div class="alert alert-danger">
                          Halaman khusus admin!. Silahkan kembali ke halaman <a href="/dashboard" class="alert-link">Dashboard</a>.
                      </div>
                  </div>
                  <!-- /.col-lg-12 -->
              </div>
              <!-- /.row -->
  
          </div>
      <% } else { %>
         <!-- Page Content -->
      <br />
      <br />
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-8">
            <div class="alert alert-danger">
              Anda harus login terlebih dahulu agar dapat mengakses halaman ini.
              <a href="/" class="alert-link">Login</a>.
            </div>
          </div>
          <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
  <% } %> 
    <% } %> 
